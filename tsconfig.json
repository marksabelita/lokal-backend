{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [ "es2015", "dom",  "es2017" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "sourceMap": true,
        "target": "es6",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}